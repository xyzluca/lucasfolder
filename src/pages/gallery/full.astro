---
import BaseLayout from '@/layouts/BaseLayout.astro'
import MasonryGallery from '@/components/ui/MasonryGallery.astro'
import { photos } from '@/data/photos'

const images = photos.map((p) => ({ id: p.id, src: p.src, alt: p.alt || p.title || p.id }))
---

<BaseLayout
  title="Full Gallery"
  description="All photography in a fullscreen masonry grid"
  type="post"
  fullWidth={true}
>
  <MasonryGallery images={images} minColWidth={260} gutter={18} />
</BaseLayout>
